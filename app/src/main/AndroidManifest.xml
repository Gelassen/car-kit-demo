<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.autokit.android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".AppApplication"
            android:usesCleartextTraffic="true"
            android:networkSecurityConfig="@xml/network_security_config"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:allowBackup="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".screens.MainActivity"
                android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".screens.intro.IntroActivity"
                android:configChanges="orientation|keyboardHidden"/>

        <activity android:name=".screens.mileage.MileageActivity"
                android:configChanges="orientation|keyboardHidden"/>

        <activity android:name=".screens.offers.OffersActivity"
                android:configChanges="orientation|keyboardHidden"/>

        <activity android:name=".screens.spares.SparesActivity"
                android:configChanges="orientation|keyboardHidden"/>
        
        <activity android:name=".screens.schedule.ScheduleActivity"
                android:configChanges="orientation|keyboardHidden"/>

        <activity android:name=".screens.submitform.SubmitActivity"
                android:configChanges="orientation|keyboardHidden"/>

        <activity android:name=".screens.message.FinalScreen"
                android:configChanges="orientation|keyboardHidden"/>

        <activity android:name=".screens.calendar.CalendarActivity"
                android:configChanges="orientation|keyboardHidden"/>

    </application>

</manifest>